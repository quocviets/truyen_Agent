{
  "model": {
    "vocab_size": 32000,
    "n_ctx": 1024,
    "n_positions": 1024,
    "n_embd": 1024,
    "n_layer": 24,
    "n_head": 16,
    "layer_norm_epsilon": 1e-05,
    "resid_pdrop": 0.1,
    "embd_pdrop": 0.1,
    "attn_pdrop": 0.1
  },
  "training": {
    "num_epochs": 50,
    "learning_rate": 0.0003,
    "weight_decay": 0.1,
